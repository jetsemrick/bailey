{
  "name": "bailey",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "packageManager": "bun@1.3.1",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "bun --cwd=client run dev",
    "dev:server": "bun --cwd=server run dev",
    "build": "bun --cwd=client run build && bun --cwd=server run build",
    "start": "bun run dev",
    "install:all": "bun install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}



