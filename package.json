{
  "name": "bailey",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "packageManager": "bun@1.3.1",
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "bun --cwd=frontend run dev",
    "dev:backend": "bun --cwd=backend run dev",
    "build": "bun --cwd=frontend run build && bun --cwd=backend run build",
    "start": "bun run dev",
    "install:all": "bun install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}



